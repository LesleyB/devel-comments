            my $env =  $ENV{Devel_Comments} 
                    || $ENV{DEVEL_COMMENTS}
                    || $ENV{DevelComments}  
                    || $ENV{DEVELCOMMENTS}
                    # to maintain backward compatibility
                    || $ENV{Smart_Comments} 
                    || $ENV{SMART_COMMENTS}
                    || $ENV{SmartComments}  
                    || $ENV{SMARTCOMMENTS}
                    ;
